/* pages/set/setting.wxss */
.container{
  display: flex;
  padding: 0;
  width: 100%;
}
.bottom{
  width: 100%;
}
.table {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #F0F0F3;
}
.tr {
  width: 100%;
  height: 40px;
  background: white;
  margin-bottom: 0.5px;
}
.td {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center; */
}
.tdleft{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.tdleft text{
  margin-left: 15px;
  font-size: 12px;
  color: #506473;
}

.tdright{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.tdright image{
  margin-right:15px ;
  width: 12px;
  height: 12px;
}

.btn{
  width: 80%;
  margin-top: 40px;
  height: 40px;
  color: white;
  font-size: 16px;
  background: #EC4837;
}
