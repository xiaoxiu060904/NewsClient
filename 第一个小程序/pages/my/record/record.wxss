/* pages/my/record/record.wxss */
.container{
  padding: 0;
  width: 100%;
  display: flex;
  background: #F0F0F3;
}
.topBtn{
  width: 100%;
  height: 50px;
  white-space: nowrap;
  background: white;
}
.btnview{
  width: 25%;
  height: 100%;
  display: inline-block;
  
}
.subBtn{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.line{
  width: 50%;
  height: 1px;
  margin-top: 10px;
}
.subBtn label{
  font-size: 14px;
  text-align: center;
  /* color: #506473; */
}
.tab{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 10px;
  background: white;
}
.tr{
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 0.5px solid #F0F0F3;
}
.leftTd{
  width: 25%;
  display: flex;
  flex-direction: column;
}
.leftTd label{
  margin-left: 15px;
  font-size: 12px;
  color: #506473;
  margin-top: 5px;
}
.rightTd{
  width: 75%;
  display: flex;
  flex-direction: column;
}
.rightTd label{
  margin-right: 15px;
  text-align: right;
  font-size: 12px;
  color: #506473;
  margin-top: 5px;
}